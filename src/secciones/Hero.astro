@---
import Section from "../components/Section.astro"
import Carrusel from "../components/Carrusel.astro"
---

<Section>
    <article>
        <figure class="hero">
            <img src="/img/hero-bg.png" width="400px" alt="imagen">
        </figure>
        <div class="container-everyone">
            <div class="container-text">
                <h1>Save time by building fast with Boldo Template </h1>
                <p>Funding handshake buyer business-to-business metrics iPad partnership. First mover advantage innovator success deployment non-disclosure.</p>
                <div class="container-button">
                    <a href="#">Buy Template</a>
                    <a href="#">Explore</a>
                </div>
            </div>
            
            <figure class="container-image">
                <img src="img/hero-graphics.png" alt="Imagen">
            </figure>

           
            
        </div>
        <div>
            <Carrusel
            img1="/img/boldo.png"
            alt1="Boldo"
            img2="/img/presto.png"
            alt2="Presto"
            />
        </div>
    </article>
</Section>

<style>
    article{
        background-color: var(--color-principal);
        width: 100%;
        height: 100%;
        color: var(--blanco);
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 120px;
    }

    .hero{
        position: absolute;
        z-index: 10;
        top: 0;
        right: 0;
    }

    .container-everyone{
        padding: 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 40px;
        z-index: 10;
        max-width: 1024px;
    }

    .container-text{
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        gap: 20px;
        
    }

    .container-text h1{
        font-size: var(--titulos);
    }

    .container-text p{
        font-size: var(--texto);
    }

    .container-button{
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

    .container-button a{
        text-decoration: none;
        color: var(--blanco);
        width: 300px;
    }

    .container-button a:nth-child(1){
        background-color: #65e4a3;
        color: var(--negro);
        font-size: var(--texto);
        padding: 20px 50px;
        border-radius: 40px;
        text-align: center;
    }

    .container-button a:nth-child(2){
        background-color: var(--color-principal);
        color: var(--blanco);
        font-size: var(--texto);
        padding: 20px 50px;
        border-radius: 40px;
        border: 2px solid var(--blanco);
        text-align: center;
    }

    .container-everyone .container-image img{
        width: 100%;
    }

    @media only screen and (min-width: 1024px){
        article{
            height: 100vh;
        }
        .container-everyone{
            display: flex;
            flex-direction: row;
        }

        .container-text{
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: end;
            text-align: start;
            gap: 20px;
            width: 100%;
            max-width: 100%;
        }

        .container-everyone .container-image img{
            width: 450px;
        }

        .container-button{
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

        .container-button a{
            text-decoration: none;
            color: var(--blanco);
            width: 100%;
        }

        .container-button{
            width: 100%;
        }

        .container-button a:nth-child(1){
            background-color: #65e4a3;
            color: var(--negro);
            font-size: var(--texto);
            padding: 20px 60px;
            border-radius: 40px;
            text-align: center;
        }
    }
    



</style>
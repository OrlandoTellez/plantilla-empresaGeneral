---
import Section from "../components/Section.astro";
import Tarjetas from "../components/Tarjetas.astro"
---

<Section>
    <section>
        <div class="container-section">
            <article class="text-container">
                <p>Our services</p>
                <h2>Handshake infographic mass market crowdfunding iteration.</h2>
            </article>
            <article class="tarjetas-container">
                <Tarjetas 
                src="/img/1.png" 
                title="Cool feature title" 
                description="Learning curve network effects return on investment."
                enlace="https://www.escuelafrontend.com/data-fetching-con-react"/>
                <Tarjetas 
                src="/img/2.png" 
                title="Cool feature title" 
                description="Learning curve network effects return on investment."
                enlace="https://www.escuelafrontend.com/data-fetching-con-react"/>
                <Tarjetas 
                src="/img/3.png" 
                title="Cool feature title" 
                description="Learning curve network effects return on investment."
                enlace="https://www.escuelafrontend.com/data-fetching-con-react"/>
            </article>
        </div>
    </section>
</Section>

<style>
    section{
        background-color: var(--blanco);
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 50px;
        padding-bottom: 40px;
    }

    .container-section{
        background-color: var(--blanco);
        width: 100%;
        padding: 20px;
        display: flex;
        flex-direction: column;
        gap: 50px;
        padding: 80px 0px;
        max-width: 1024px;
    }

    .tarjetas-container{
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        place-items: center;
        width: 100%;    
        max-width: 100%;
        gap: 40px;
    }

    .text-container{
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 20px;
        text-align: center;
        width: 100%;
        padding: 0px 40px;
    }

    .text-container p{
        font-size: 1.5em;
    }

    .text-container h2{
        font-size: 1.4em;
    }
</style>
